predicate sll(loc x, seq s) {
|  x == 0        => { s == <>; emp }
|  not (x == 0)  => { s == <v> ++ s1; [x, 2] ** x :-> v ** (x + 1) :-> nxt ** sll(nxt, s1) }
}

predicate lseg(loc x, loc y, seq s) {
|  x == y        => { s == <> ; emp }
|  not (x == y)  => { s == <v> ++ s1 ; [x, 2] ** x :-> v ** (x + 1) :-> nxt ** lseg(nxt, y, s1) }
}