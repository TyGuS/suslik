{0 <= sz1 && 0 <= sz2 && 0 <= v && hi1 <= v && l == 0 && v <= 7 && v <= lo2 ; (x + 1) :-> l ** (x + 2) :-> r ** ret :-> unused ** x :-> v ** bst(l, sz1, lo1, hi1)<a> ** bst(r, sz2, lo2, hi2)<b> ** [x, 3]}
{hi == (r == 0 ? (l == 0 ? 0 : hi1) : hi2) && lo == (l == 0 ? (r == 0 ? 7 : lo2) : lo1) && n1 == sz1 + sz2 ; ret :-> y ** bst(y, n1, lo, hi)<c>}
void bst_remove_root_no_left (loc x, loc ret) {
  let r = *(x + 2);
  if (r == 0) {
    free(x);
    *ret = 0;
  } else {
    free(x);
    *ret = r;
  }
}