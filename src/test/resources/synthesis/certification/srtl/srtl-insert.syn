#. -b true -c 2
sorted list: insert an element

#####

{0 <= n /\ 0 <= k /\ k <= 7 ; r :-> k ** srtl(x, n, lo, hi) }
void srtl_insert (loc x, loc r)
{n1 == n + 1 /\ lo1 == (k <= lo ? k : lo)  /\ hi1 == (hi <= k ? k : hi) ; r :-> y ** srtl(y, n1, lo1, hi1) }

#####

void srtl_insert (loc x, loc r) {
  let k = *r;
  if (x == null) {
    let y = malloc(2);
    *r = y;
    *(y + 1) = null;
    *y = k;
  } else {
    let v = *x;
    if (v <= k) {
      let n = *(x + 1);
      srtl_insert(n, r);
      let y = *r;
      *r = x;
      *(x + 1) = y;
    } else {
      let y = malloc(2);
      *r = y;
      *(y + 1) = x;
      *y = k;
    }
  }
}